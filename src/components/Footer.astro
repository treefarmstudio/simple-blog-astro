---
import { settings } from "../data/settings";
import Container from "./Container.astro";
import SocialList from './SocialList.astro';
---

<footer>
  <Container>
    <div class="footer-links__grid">
      <ul>
        <li><strong>Company</strong></li>
        <li>About</li>
        <li>Blog</li>
      </ul>
      <ul>
        <li><strong>Products</strong></li>
        <li>Store</li>
        <li>Merch</li>
      </ul>
      <ul>
        <li><strong>Support</strong></li>
        <li>Discord</li>
        <li>Contact Us</li>
      </ul>
      <ul>
        <li><strong>Legal</strong></li>
        <li>Privacy</li>
        <li>Terms</li>
      </ul>
    </div>
    <div class="footer-bottom__container">
      <p>&copy; {new Date().getFullYear()} {settings.name}</p>
      <SocialList />
    </div>
  </Container>
</footer>

<style>
  footer {
    position: relative;
    min-height: 200px;
    background-color: var(--theme-background-dark);
    color: var(--theme-on-background-dark);
  }
  .footer-links__grid {
    padding: 10vh 0;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }
  .footer-links__grid ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .footer-links__grid ul li:first-of-type {
    margin-bottom: 0.5rem;
  }
  .footer-links__grid ul li strong {
    font-weight: 900;
  }
  .footer-bottom__container {
    position: relative;
    bottom: 0;
    padding: 0 0 1rem 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  @media(max-width: 768px) {
    .footer-links__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media(max-width: 480px) {
    .footer-links__grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>